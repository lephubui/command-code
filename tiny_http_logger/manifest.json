{
  "manifest_version": 3,
  "name": "Tiny HTTP/S Logger",
  "version": "1.0.0",
  "description": "Command & Code Labs: View and filter HTTP/HTTPS requests made by the current site.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },
  "action": {
    "default_icon": { "16": "icons/16.png", "32": "icons/32.png" },
    "default_popup": "popup.html",
    "default_title": "HTTP/S Logger"
  },
  "background": { "service_worker": "background.js", "type": "module" },

  "permissions": ["webRequest", "tabs", "storage"],
  "optional_host_permissions": ["http://*/*", "https://*/*"],

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'none'; base-uri 'self';"
  }
}